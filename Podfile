# Uncomment the next line to define a global platform for your project
platform :ios, '10.0'

inhibit_all_warnings!

target 'Patient' do
  use_frameworks!

  pod 'Result'
  
  # FRP
  pod 'ReactiveCocoa'

  # Code generation
  pod 'R.swift'
  pod 'R.swift.Library', '5.2.0'
  pod 'Sourcery'

  # Static code analyzer
  pod 'SwiftLint'

  # Validation
  pod 'Validator'
  pod 'PhoneNumberKit'
  
  # UI
  pod 'SideMenu'
  pod 'VisualEffectView'
  pod 'UIWindowTransitions'
  pod 'Dwifft'
  pod 'GoogleMaps'

end

target 'Platform' do
  use_frameworks!

  # Networking
  pod 'Alamofire'
  pod 'AlamofireNetworkActivityIndicator'
  pod 'AlamofireImage'
  pod 'Reqres'
  pod 'Moya'
  pod 'Moya/ReactiveSwift'

  # FRP
  pod 'ReactiveCocoa'

  # Storage
  pod 'KeychainAccess'
  pod 'RealmSwift', '~> 5.4.1'
  pod 'Result'
  
  pod 'R.swift.Library', '5.2.0'

end

target 'Domain' do
  use_frameworks!

  # FRP
  pod 'ReactiveSwift'
  pod 'Result'
  
  pod 'R.swift.Library', '5.2.0'

end




